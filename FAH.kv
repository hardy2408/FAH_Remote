WindowManager:
	MainWindow:
	AddWindow:
	ClientWindow:
	EditClient:
	

<MainWindow>:
    name: 'main'
	lay1: lay1

    GridLayout:
        cols:1
		id: lay1
		innerLay: innerLay
		
		Label:
			text: "List of Clients"

        GridLayout:
            cols: 4
			id: innerLay

        Button:
            text: "Add"
			on_release:
				app.root.current = "AddClient"
				root.manager.transition.direction = "left"



<AddWindow>:
    name: "AddClient"
	
	lay1: lay1
	
	GridLayout:
		cols:1
		id : lay1
		innerLay: innerLay
		
		GridLayout:
			cols:2
			id: innerLay
			clientName: clientName
			ipAddress: ipAddress
			port: port
			
			Label:
				text: "Name: "
				
			TextInput:
				id: clientName
				multiline: False
				write_tab: False

			Label:
				text: "IP Address: "
				
			IPTextInput:
				id: ipAddress
				multiline: False
				write_tab: False
				
			Label:
				text: "Port: "
				
			TextInput:
				id: port
				multiline: False
				input_filter: "int"
				text: "36330"
				write_tab: False
			
			Button:
				text: "Cancel"
				on_release:
					app.root.current = "main"
					root.manager.transition.direction = "right"

			Button:
				text: "Save"
				on_press: root.saveBtn()
				

<ClientWindow>:
    name: "Client"
	
	lay1: lay1
	
	GridLayout:
		cols:1
		id : lay1
		idClient: idClient
		clientLay: clientLay
		slotLay: slotLay
		queueLay: queueLay
		
		Label:
			text: "Client: "
			id: idClient
		
		GridLayout:
			cols:4
			id: clientLay
			
			idPower: idPower
			idUser: idUser
			idTeam: idTeam
			idPpd: idPpd
			
			#line 1
			Label:
				text: "Power"
				
			Label:
				text: "User"
				
			Label:
				text: "Team"
				
			Label:
				text: "PointsPerDay"
				
			#line 2
			Spinner:
				id: idPower
				text: "light"
				values: "light", "medium", "full"
				on_text: root.set_client_power(idPower.text)
				
			Label:
				id: idUser
				
			Label:
				id: idTeam
				
			Label:
				id: idPpd

		GridLayout:
			cols:3
			id: slotLay
			
			idSlot: idSlot
			idSlotStatus: idSlotStatus
			idSlotDescription: idSlotDescription
			
			#line 1
			Label:
				text: "Slot ID"
				
			Label:
				text: "Status"
				
			Label:
				text: "Description"
				
			#line 2
			Spinner:		
				text: "Slot"
				id: idSlot
				on_text: root.selectSlot(idSlot.text)

				
			Label:
				id: idSlotStatus
				
			Label:
				id: idSlotDescription
				
		GridLayout: 
			cols:3
			
			Button:
				text: "Fold"
				on_release: root.fold()

			Button:
				text: "Pause"
				on_release: root.pause()

			Button:
				text: "Finish"
				on_release: root.finish()

		GridLayout:
			cols:4
			id: queueLay
			
			idQueue: idQueue
			idQueueStatus: idQueueStatus
			idProgress: idProgress
			idETA: idETA
			
			#line1
			Label:
				text: "Queue"
				
			Label:
				text: "Status"
				
			Label:
				text: "Progress"

			Label:
				text: "ETA"
				
			#line2
			Button:
				id: idQueue
				text: "QueueID"
				
			Label:
				id: idQueueStatus
				
			Label:
				id: idProgress

			Label:
				id: idETA
				
			
				
		Button:
			text: "Clients"
			on_release:
				app.root.current = "main"
				root.manager.transition.direction = "right"

<EditClient>:
    name: "EditWindow"
	
	lay1: lay1
	
	GridLayout:
		cols:1
		id : lay1
		innerLay: innerLay
		
		GridLayout:
			cols:2
			id: innerLay
			clientName: clientName
			ipAddress: ipAddress
			port: port
			
			Label:
				text: "Name: "
				
			TextInput:
				id: clientName
				multiline: False
				write_tab: False

			Label:
				text: "IP Address: "
				
			IPTextInput:
				id: ipAddress
				multiline: False
				write_tab: False
				
			Label:
				text: "Port: "
				
			TextInput:
				id: port
				multiline: False
				input_filter: "int"
				write_tab: False
			
			Button:
				text: "Cancel"
				on_release:
					app.root.current = "main"
					root.manager.transition.direction = "right"

			Button:
				text: "Save"
				on_press: root.saveBtn()


<MyPopup>:
	idButton: idButton
	idLabel: idLabel
	
	Label:
		id: idLabel
		text: "Error"
		size_hint: 0.6, 0.2
		pos_hint: {"x":0.2, "top":1}
		
	Button:
		id: idButton
		text: "Ok"
		size_hint: 0.8, 0.2
		pos_hint: {"x":0.1, "y":0.1}
		
